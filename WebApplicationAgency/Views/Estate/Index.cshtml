 @model IEnumerable<Business.Interop.Data.EstateDto>
    @{
        ViewData["Title"] = "Объекты недвижимости";
    }

    <!DOCTYPE html>

    <html>
    <body>
        <table class="table">
            <tr>
                <th>Название</th>
                <th>Цена</th>
                <th>Площадь</th>
                <th>Год постройки</th>
                <th>Количество комнат</th>
                <th>Количество этажей</th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Area</td>
            <td>@item.YearOfConsruction</td>
            <td>@item.RoomsCount</td>
            <td>@item.FloorsCount</td>
            <td><a asp-controller="Estate" asp-action="Details" asp-route-id="@item.Id">Подробности</a></td>
            <td><a asp-controller="Estate" asp-action="Delete" asp-route-id="@item.Id">Удалить</a> </td>
        </tr>
            }
        </table>
        <br />       
        <p><a asp-controller="Estate" asp-action="Create">Создать</a></p>
    </body>
</html>
